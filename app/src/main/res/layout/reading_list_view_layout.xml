<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">
            <TextView
                android:text="@string/mainTitleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="10dp"
                android:id="@+id/readingListTitle"
                android:gravity="start"
                android:textColor="@color/black"/>
            <TextView
                android:text="@string/englishThemeHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:id="@+id/readingListCaption"
                android:textColor="@color/black"
                android:layout_below="@+id/readingListTitle" />


            <TextView
                android:text="@string/notification_date_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="10dp"
                android:id="@+id/readingListDate"
                android:layout_below="@id/readingListCaption"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_date_icon"
                android:padding="10dp"
                android:id="@+id/weekPassedIndicator"
                android:tint="@color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>