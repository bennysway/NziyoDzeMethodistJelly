<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="120dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/aboutChurchButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/main_list_icon_bg"
                    android:contentDescription="Pick Hymn Number Button"
                    android:padding="40dp"
                    app:srcCompat="@drawable/ic_info_black_24dp" />
                <TextView
                    android:id="@+id/aboutChurchButtonText"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="@string/aboutButtonText"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/churchHymnListButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@drawable/main_list_icon_bg"
                    android:padding="40dp"
                    app:srcCompat="@drawable/ic_list" />

                <TextView
                    android:id="@+id/churchHymnListButtonText"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:text="@string/churchHymnListButtonText"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/churchFavoritesButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@drawable/main_list_icon_bg"
                    android:padding="40dp"
                    app:srcCompat="@drawable/ic_heart_icon" />

                <TextView
                    android:id="@+id/churchFavoritesButtonText"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="@string/favButtonText"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/churchPostsButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:background="@drawable/main_list_icon_bg"
                    android:padding="40dp"
                    app:srcCompat="@drawable/caption_icon" />

                <TextView
                    android:id="@+id/churchPostsButtonText"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="@string/postsButtonText"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/churchEventsButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:background="@drawable/main_list_icon_bg"
                    android:padding="40dp"
                    app:srcCompat="@drawable/ic_date_icon"/>

                <TextView
                    android:id="@+id/churchEventsButtonText"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:text="@string/eventsText"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/churchRecentButton"
                    android:layout_width="@dimen/buttonSquareSize"
                    android:layout_height="@dimen/buttonSquareSize"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@drawable/main_list_icon_bg"
                    android:padding="40dp"
                    app:srcCompat="@drawable/ic_history" />

                <TextView
                    android:id="@+id/churchRecentButtonText"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:text="@string/recentButtonText"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/top_list"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/announcements"
                android:textColor="@color/white"
                android:background="@color/cool"
                android:padding="20dp"
                android:textSize="24sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>