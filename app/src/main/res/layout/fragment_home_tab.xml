<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameHolder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.pages.home.HomeTab">
    <ScrollView
        android:id="@+id/fragmentContentHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="200dp"
        android:clipToPadding="false">
        <com.google.android.flexbox.FlexboxLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:id="@+id/menuContainer"
            android:padding="10dp"
            app:flexWrap="wrap"
            app:alignItems="baseline"
            app:alignContent="space_between">
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_numpad"
                app:menu_title="@string/hymnNumberButtonText"
                android:id="@+id/hymnNumberButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_list"
                app:menu_title="@string/hymnListButtonText"
                android:id="@+id/hymnListButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_search"
                app:menu_title="@string/searchButtonText"
                android:id="@+id/searchButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_heart_icon"
                app:menu_title="@string/favButtonText"
                android:id="@+id/favoritesButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_history"
                app:menu_title="@string/recentButtonText"
                android:id="@+id/recentButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_captions"
                app:menu_title="@string/captionButtonText"
                android:id="@+id/captionsButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_date_icon"
                app:menu_title="@string/eventsText"
                android:id="@+id/eventsButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_praying_hands"
                app:menu_title="Prayers"
                android:id="@+id/prayersButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_church"
                app:menu_title="Church"
                android:id="@+id/churchButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_organization"
                app:menu_title="Organization"
                android:id="@+id/organizationButton"/>
            <com.seven.clip.nziyodzemethodist.customViews.MenuItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu_icon="@drawable/ic_profile"
                app:menu_title="Prayers"
                android:id="@+id/profileButton"/>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>

</RelativeLayout>