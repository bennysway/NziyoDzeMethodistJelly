<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hymn_list2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="com.seven.clip.nziyodzemethodist.HymnList">


    <TextView
        android:text="A"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="60sp"
        android:background="@drawable/scroll_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/hymnScrollPop"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/natured_small"
        android:scaleType="centerCrop"
        android:id="@+id/hymnNumBg" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/hymnList"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.futuremind.recyclerviewfastscroll.FastScroller
        android:id="@+id/hymnListShonaFastScroller"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="20dp"
            app:realtimeOverlayColor="#afff" />
        <TextView
            android:text="@string/hymnListButtonText"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/hymnListTitle" />
    </RelativeLayout>


    <ImageView
        app:srcCompat="@drawable/back_icon"
        android:id="@+id/hymnListBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
