<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="5dp">
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:centerColor="@color/cool"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/cool" />
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>



</layer-list>
