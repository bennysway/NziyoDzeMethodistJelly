<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="5dp">
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:centerColor="@color/cool"/>
            <size
                android:width="140dp"
                android:height="140dp"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/cool" />
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>



</layer-list>
