<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="10dp"
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape
            android:shape="oval">
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/burn"
                android:angle="45"/>
        </shape>
    </item>
    <item
        android:top="15dp"
        android:left="15dp"
        android:right="15dp"
        android:bottom="15dp">
        <shape
            android:shape="oval">
            <gradient
                android:startColor="@color/burn"
                android:endColor="@color/colorPrimary"
                android:angle="90"/>
            <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>

</layer-list>
